{
	"linters": {
		"clang-format": {
			"type": "clang-format",
			"include": "(.*\\.(c|cpp|h|hpp)$)",
			"exclude": "(^(src|include)/(rtos|ifi)/)"
		},
		"spelling": {
			"type": "spelling",
			"include": "(.*)"
		},
		"text": {
			"type": "text",
			"include": "(.*)",
			"exclude": "(^(src|include)/(((rtos|ifi)/)|(system/dev/banners.h)))",
			"severity": {
				"2": "disabled",
				"3": "disabled"
			}
		}
	}
}
